{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": [ "dom", "es2015" ]
  },
  "include": [
    "resources/js/**/*"
   ],
  "exclude": ["node_modules"]
}
